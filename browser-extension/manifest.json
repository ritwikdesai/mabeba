{
  "name": "MABEBA Extension",
  "version" : "1.0",
  "permissions": [
      "activeTab",
      "https://*/*"
  ],

  "background":{
    "scripts":["peer.js","bundle.js","jquery.min.js","background.js"]
  },

  "browser_action":{
    "default_icon" : "icon.png",
    "default_title": "SemX",
    "default_popup": "popup.html"
  },
    
  "externally_connectable": {
    "matches": ["*://semx.azurewebsites.net/*","*://meba.azurewebsites.net/","*://192.168.0.100/*"]
  },
  "manifest_version": 2
}
